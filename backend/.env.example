# Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/betsphere
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/betsphere

# JWT Secret (Change this to a random strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_HERE
RAZORPAY_KEY_SECRET=YOUR_SECRET_HERE

# Cricket API Configuration
CRICKET_API_KEY=your-cricapi-key-here
CRICKET_API_URL=https://api.cricapi.com/v1

# Admin Credentials (First time setup)
ADMIN_EMAIL=admin@betsphere.com
ADMIN_PASSWORD=Admin@123

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8000

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# App Configuration
MIN_BET_AMOUNT=10
MAX_BET_AMOUNT=100000
WITHDRAWAL_MIN=100
TRANSACTION_FEE_PERCENT=2
