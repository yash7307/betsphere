# Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/betsphere
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/betsphere

# JWT Secret (Change this to a random strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Dodo Payments Configuration
DODO_PAYMENTS_API_KEY=your-dodo-api-key-here
DODO_WEBHOOK_KEY=your-dodo-webhook-secret-here
DODO_ENVIRONMENT=test_mode

# Roanuz Cricket API Configuration
ROANUZ_API_KEY=your-roanuz-api-key-here
ROANUZ_PROJECT_KEY=your-roanuz-project-key-here

# Admin Credentials (First time setup)
ADMIN_EMAIL=admin@betsphere.com
ADMIN_PASSWORD=Admin@123

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# App Configuration
MIN_BET_AMOUNT=10
MAX_BET_AMOUNT=100000
WITHDRAWAL_MIN=100
TRANSACTION_FEE_PERCENT=2
